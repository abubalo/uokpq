{
    "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "resolveJsonModule": true,
      "typeRoots": ["./node_modules/@types"],
      "sourceMap": true,
      "baseUrl": "./",
      "paths": {
        "@/*":["src/"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  